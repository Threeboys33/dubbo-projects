<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
       xsi:schemaLocation="http://www.springframework.org/schema/beans        http://www.springframework.org/schema/beans/spring-beans.xsd        http://code.alibabatech.com/schema/dubbo        http://code.alibabatech.com/schema/dubbo/dubbo.xsd">


<dubbo:application name="dubbo-provier"/>

<!--    多注册中心 -->
<dubbo:protocol name="dubbo" port="20880"/>
<dubbo:protocol name="hessian" port="8090" server="jetty"/>

<!--    注册中心可通过直连方式点对点 -->
<!--<dubbo:registry address="N/A"/>-->
<!--注册中心可通过zookeeper建立连接-->
    <dubbo:registry address="zookeeper://127.0.0.1:2181"/>

<dubbo:service interface="dtstack.san.IHelloService" ref="echoService" version="1.0.0" protocol="dubbo,hessian"/>
<dubbo:service interface="dtstack.san.IHelloService" ref="helloService" version="2.0.0" protocol="dubbo"/>

<bean id="echoService" class="dtstack.san.impl.EchoSErviceImp"/>
<bean id="helloService" class="dtstack.san.impl.HelloServiceImpl"/>

</beans>